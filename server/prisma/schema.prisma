generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum VideoType {
  PROXY
  ORIGINAL
}

enum Status {
  READY
  ERROR
  PROCESSING
}

model Video {
  id         String           @id @default(uuid())
  location   String
  files      VideoFile[]
  playbacks  VideoPlayback[]
  thumbnails VideoThumbnail[]
  updatedAt  DateTime         @updatedAt
  createdAt  DateTime         @default(now())
}

model VideoFile {
  id        String    @id @default(uuid())
  status    Status    @default(PROCESSING)
  location  String
  metadata  Json?
  type      VideoType
  video     Video     @relation(fields: [videoId], references: [id], onDelete: Cascade)
  videoId   String    @unique
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
}

model VideoPlayback {
  id        String   @id @default(uuid())
  status    Status   @default(PROCESSING)
  location  String
  videoId   String
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model VideoThumbnail {
  id        String   @id @default(uuid())
  location  String
  videoId   String
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
